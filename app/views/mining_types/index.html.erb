<p style="color: green"><%= notice %></p>

<h1>Mining types</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Acronym</th>
      <th>Options</th>
    </tr>
  </thead>
  <tbody>
    <% @mining_types.each do |mining_type|%>
      <tr>
        <td><%= mining_type.description%></td>
        <td><%= mining_type.acronym%></td>
        <td> 
          <%= link_to 'Mostrar', mining_type %>
          <%= link_to 'Editar', edit_mining_type_path(mining_type) %>
        </td>
      </tr>
    <%end%>
  </tbody>
</table>

<%= link_to "New mining type", new_mining_type_path %>
