<p style="color: green"><%= notice %></p>

<h1>Coins</h1>

<table>
  <thead>
    <tr>
      <th> <%= @coins.human_attribute_name(:description) %> </th>
      <th> <%= @coins.human_attribute_name(:acronym) %> </th>
      <th> <%= @coins.human_attribute_name(:url_image) %> </th>
    </tr>
  </thead>
  <tbody>
    <% @coins.each do |coin|%>
      <tr>
        <td><%= coin.description%></td>
        <td><%= coin.acronym%></td>
        <td><%= image_tag coin.url_image, widget:30, height:30 %></td>
        <td><%= coin.mining_type.description %></td>
        <td> 
          <%= link_to 'Mostrar', coin %>
          <%= link_to 'Editar', edit_coin_path(coin) %>
        </td>
      </tr>
    <%end%>
  </tbody>
</table>


<%= link_to "New coin", new_coin_path %>
