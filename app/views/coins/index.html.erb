<p style="color: green"><%= notice %></p>

<h1>Coins</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Acronym</th>
      <th>Url image</th>
      <th>Link para mostrar moeda</th>
    </tr>
  </thead>
  <tbody>
    <% @coins.each do |coin|%>
      <tr>
        <td><%= coin.description%></td>
        <td><%= coin.acronym%></td>
        <td><%= image_tag coin.url_image, widget:30, height:30 %></td>
        <td> 
          <%= link_to 'Mostrar', coin %>
          <%= link_to 'Editar', edit_coin_path(coin) %>
          <%= link_to 'Apagar', coin, method: :delete, data: { confirm: 'Tem certeza?' } %> 
        </td>
      </tr>
    <%end%>
  </tbody>
</table>


<%= link_to "New coin", new_coin_path %>
